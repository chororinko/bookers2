<div class="notice">
  <%= flash[:notice] %>
</div>

<div class="row justify-content-center">
  <%= render 'searches/search' %>
</div>

<div class="container fluid mt-3 px-5">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <%= form_with model: @book do |f| %>
      <table class="table table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= image_tag(@book.user.get_profile_image(50,50)) %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td id="favorite-btn_<%= @book.id %>">
              <%= render 'favorites/favorite-btn', book: @book %>
            </td>
            <td>
              <p>コメント数：<%= @book.book_comments.count %></p>
            </td>

            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?", class: 'btn btn-danger' %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
        <p><%= link_to @book.user.name, user_path(@book.user) %></p>
      <% end %>

      <% @book.book_comments.each do |comment| %>
      <div id="comment-index_<%= comment.id %>">
        <%= render 'book_comments/comment-index', comment: comment %>
      </div>
      <% end %>

      <%= form_with model: [@book, @book_comment], local: false do |f| %>
        <div><%= f.text_area :comment, rows:'5', placeholder: 'コメントをここに', class: "w-100" %></div>
        <div><%= f.submit '送信' %></div>
      <% end %>
    </div>
  </div>
</div>


