<div class="container fluid mt-3 mx-auto">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="form-title mb-3">
        <h2>User info</h2>
      </div>
<%= form_with model: @user do |f| %>

  <h2>
    <% if @user.errors.any? %>
    <%= @user.errors.count %> errors prohibited this obj from being saved:
  </h2>
  <h6>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </h6>
  <% end %>


  <h6>Name</h6>
  <%= f.text_field :name, class: 'col mb-3'%>


  <h6>Image</h6>
  <%= f.file_field :profile_image, accept: "image/*", class: 'mb-3' %>

  <h6>Introduction</h6>
  <%= f.text_area :introduction, class: 'col mb-2'%>

  <h6><%= f.submit 'Update User', class: 'btn btn-secondary mb-3'%></h6>

<% end %>
</div>
</div>
</div>
