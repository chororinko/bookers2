<h1>Editing book</h1>
<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <h4><%= f.submit 'Update book' %></h4>

    <table>
      <tr>
        <td><%= link_to "Show", book_path(@book) %></td>
        <td><div class="border">|</div><td>
        <td><%= link_to "Back", books_path %></td>
      </tr>
    </table>
<% end %>
