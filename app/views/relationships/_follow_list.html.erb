<% if users.exists? %>
<table class="table table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>　　　　</th>
      <th>　　　　</th>
    </tr>
  </thead>
  <% users.each do |user| %>
  <tbody>
    <tr>
      <td><%= link_to(user_path(user)) do %>
        <%= image_tag(user.get_profile_image(50,50)) %>
        <% end %>
      </td>
      <td><%= user.name %></td>
      <td>フォロー数：<%= user.followings.count %></td>
      <td>フォロワー数：<%= user.followers.count %></td>
      <td><%= link_to 'Show', user_path(user.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>