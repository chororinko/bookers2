<div class="row justify-content-center">
  <%= render 'search' %>
</div>

<% if @model == "User" %>
<h2>Users search for "<%= params[:content] %>"</h2>
<table class="table table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>　　　　</th>
      <th>　　　　</th>
      <th>　　　　</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to(user_path(user)) do %>
        <%= image_tag(user.get_profile_image(50,50)) %>
        <% end %>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to 'Show', user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h2>Books search for "<%= params[:content] %>"</h2>
<table class="table table">
  <thead>
    <tr>
      <th>　　　</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to user_path(book.user) do %>
        <%= image_tag(book.user.get_profile_image(50,50)) %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
