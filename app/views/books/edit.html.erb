<div class="container mt-3 mx-auto">
  <div class="row">
    <div class="mx-auto">
      <h1>Editing book</h1>
<%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <h6>Title</h6>
  <%= f.text_field :title %>

  <h6>Opinion</h6>
  <%= f.text_area :body %>

  <h6><%= f.submit 'Update book', class: 'btn btn-secondary' %></h6>

    <table>
      <tr>
        <td><%= link_to "Show", book_path(@book) %></td>
        <td><div class="border">|</div><td>
        <td><%= link_to "Back", books_path %></td>
      </tr>
    </table>
<% end %>
</div>
</div>
</div>
